@model IEnumerable<VersionManagement.DTOs.CustomerProductDTO>

@{
        ViewData["Title"] = "ProductDetails";
    var productName = Model.FirstOrDefault().Product.Name.ToUpper();
    }

<h1>@productName OWNERS</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Latest Version Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
{
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastVersion.ReleaseNumber)
                </td>
            </tr>
        }
    </tbody>
</table>