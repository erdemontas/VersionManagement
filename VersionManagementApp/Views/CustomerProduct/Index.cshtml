@model IEnumerable<VersionManagement.DTOs.CustomerProductDTO>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Product Name
            </th>
            <th>
                Latest Version Name
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="CustomerProductDetails" asp-action="Index" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Customer.Name) </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastVersion.ReleaseNumber)
            </td>
            <td><a asp-controller="CustomerProductDetails" asp-action="Index" asp-route-id="@item.Id"><button>Details</button></a></td>
        </tr>
}
    </tbody>
</table>
